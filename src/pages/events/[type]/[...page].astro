---
import MainLayout from "../../../layouts/MainLayout.astro";
import {
  fetchMeetupEvents,
  getEventsByType,
  getEventTypeLabel,
  getEventTypeDescription,
  type EventType,
  type CategorizedEvent,
} from "../../../utils/meetupApi";
import MarkdownIt from "markdown-it";

const md = new MarkdownIt({ html: true, linkify: true, breaks: true });

export async function getStaticPaths() {
  const eventTypes: EventType[] = ["mornings", "evenings", "hackathons"];
  const paths = [];

  // Fetch all events to determine pagination
  for (const type of eventTypes) {
    const events = await getEventsByType(type);
    const now = new Date();
    const pastEvents = events.filter((event) => new Date(event.dateTime) < now);

    const EVENTS_PER_PAGE = 10;
    const totalPages = Math.max(
      1,
      Math.ceil(pastEvents.length / EVENTS_PER_PAGE),
    );

    // Generate a path for each page
    for (let pageNum = 1; pageNum <= totalPages; pageNum++) {
      paths.push({
        params: {
          type,
          page: pageNum === 1 ? undefined : String(pageNum),
        },
      });
    }
  }

  return paths;
}

const { type, page } = Astro.params as { type: EventType; page?: string };
const events = await getEventsByType(type);
const label = getEventTypeLabel(type);
const description = getEventTypeDescription(type);

// Separate upcoming and past events
const now = new Date();
const upcomingEvents = events.filter(
  (event) => new Date(event.dateTime) >= now,
);
const pastEvents = events.filter((event) => new Date(event.dateTime) < now);

// Pagination for past events
const EVENTS_PER_PAGE = 10;
const currentPage = page ? parseInt(page) : 1;
const totalPastPages = Math.ceil(pastEvents.length / EVENTS_PER_PAGE);
const paginatedPastEvents = pastEvents.slice(
  (currentPage - 1) * EVENTS_PER_PAGE,
  currentPage * EVENTS_PER_PAGE,
);

// Get date range for current page
function getDateRange(events: CategorizedEvent[]) {
  if (events.length === 0) return null;
  const dates = events.map((e) => new Date(e.dateTime));
  const earliest = new Date(Math.min(...dates.map((d) => d.getTime())));
  const latest = new Date(Math.max(...dates.map((d) => d.getTime())));
  return { earliest, latest };
}

// Format date in compact style: "Wed 9/28/25"
function formatCompactDate(dateTime: string): string {
  const date = new Date(dateTime);
  const weekday = date.toLocaleDateString("en-US", {
    weekday: "short",
    timeZone: "America/New_York",
  });
  const month = date.toLocaleDateString("en-US", {
    month: "numeric",
    timeZone: "America/New_York",
  });
  const day = date.toLocaleDateString("en-US", {
    day: "numeric",
    timeZone: "America/New_York",
  });
  const year = date.toLocaleDateString("en-US", {
    year: "2-digit",
    timeZone: "America/New_York",
  });
  return `${weekday} ${month}/${day}/${year}`;
}

// Format time: "6:30 PM"
function formatTime(dateTime: string): string {
  const date = new Date(dateTime);
  return date.toLocaleTimeString("en-US", {
    hour: "numeric",
    minute: "2-digit",
    timeZone: "America/New_York",
  });
}

// Generate Google Calendar link
function getGoogleCalendarLink(event: any): string {
  const startDate = new Date(event.dateTime);
  const endDate = new Date(event.endTime);

  // Format dates for Google Calendar (YYYYMMDDTHHmmss in local time)
  const formatForGoogle = (date: Date) => {
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, "0");
    const day = String(date.getDate()).padStart(2, "0");
    const hours = String(date.getHours()).padStart(2, "0");
    const minutes = String(date.getMinutes()).padStart(2, "0");
    const seconds = String(date.getSeconds()).padStart(2, "0");
    return `${year}${month}${day}T${hours}${minutes}${seconds}`;
  };

  const start = formatForGoogle(startDate);
  const end = formatForGoogle(endDate);

  const params = new URLSearchParams({
    action: "TEMPLATE",
    text: event.title,
    dates: `${start}/${end}`,
    details: event.description,
    location: `${event.location.name}, ${event.location.address}, ${event.location.city}, ${event.location.state}`,
    ctz: "America/New_York",
  });

  return `https://calendar.google.com/calendar/render?${params.toString()}`;
}

// Generate pagination URL
function getPageUrl(pageNum: number): string {
  return pageNum === 1 ? `/events/${type}` : `/events/${type}/${pageNum}`;
}

// Render markdown description
function renderMarkdown(text: string): string {
  return md.render(text);
}

// Get preview text (first paragraph)
function getPreviewText(text: string): string {
  const firstPara = text.split("\n\n")[0];
  return md.renderInline(firstPara);
}

// Get color scheme based on event type
function getEventColors(eventType: string) {
  switch (eventType) {
    case "mornings":
      return {
        border: "border-amber-200",
        badge: "bg-amber-600",
        badgePast: "bg-gray-500",
        badgeText: "text-white",
      };
    case "evenings":
      return {
        border: "border-slate-200",
        badge: "bg-slate-700",
        badgePast: "bg-gray-500",
        badgeText: "text-white",
      };
    case "hackathons":
      return {
        border: "border-purple-200",
        badge: "bg-purple-600",
        badgePast: "bg-gray-500",
        badgeText: "text-white",
      };
    default:
      return {
        border: "border-green-200",
        badge: "bg-emerald-600",
        badgePast: "bg-gray-500",
        badgeText: "text-white",
      };
  }
}

const pastDateRange = getDateRange(paginatedPastEvents);
const colors = getEventColors(type);
---

<MainLayout title={`${label} - Astoria Tech Meetup`}>
  <!-- Page Header -->
  <section class="mb-12">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl font-bold text-emerald-900 mb-4">{label}</h1>
      <p class="text-lg text-emerald-700">
        {description}
      </p>
    </div>
  </section>

  <!-- Upcoming Events -->
  {
    upcomingEvents.length > 0 && (
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-emerald-900 mb-6">
          Upcoming {label}
        </h2>
        <div class="space-y-4">
          {upcomingEvents.map((event) => (
            <div
              class={`bg-white rounded-lg border ${colors.border} hover:shadow-md transition-shadow duration-200 relative overflow-hidden`}
            >
              {/* Date/Time Badge */}
              <div
                class={`absolute top-0 left-0 ${colors.badge} ${colors.badgeText} px-4 py-2.5 rounded-br-xl shadow-lg`}
              >
                <div class="text-sm font-bold leading-tight">
                  {formatCompactDate(event.dateTime)}
                </div>
                <div class="text-sm font-semibold mt-0.5">
                  {formatTime(event.dateTime)}
                </div>
              </div>

              <div class="pl-36 pr-4 py-4">
                <header class="mb-3">
                  <h3 class="text-lg font-semibold text-emerald-900 mb-2">
                    {event.title}
                  </h3>
                  <div class="flex flex-wrap gap-3 text-xs text-emerald-600">
                    <span>üìç {event.location.name}</span>
                    {event.going > 0 && <span>üë• {event.going} going</span>}
                  </div>
                </header>

                <main class="mb-3">
                  <div
                    class="description-container text-emerald-800 text-sm"
                    data-full-description={event.description}
                  >
                    <div class="description-preview line-clamp-2">
                      <div set:html={getPreviewText(event.description)} />
                    </div>
                    <div class="description-full hidden">
                      <div
                        class="prose prose-emerald prose-sm max-w-none [&>p]:my-3 [&>ul]:my-3 [&>ol]:my-3 [&>li]:my-1"
                        set:html={renderMarkdown(event.description)}
                      />
                    </div>
                    {event.description.length > 120 && (
                      <button
                        class="show-more-btn text-emerald-600 hover:text-emerald-800 text-xs font-medium mt-1 flex items-center gap-1"
                        onclick="this.closest('.description-container').querySelector('.description-preview').classList.toggle('hidden'); this.closest('.description-container').querySelector('.description-full').classList.toggle('hidden'); this.querySelector('.caret').classList.toggle('rotate-180'); this.querySelector('.btn-text').textContent = this.querySelector('.btn-text').textContent === 'Show more' ? 'Show less' : 'Show more';"
                      >
                        <span class="btn-text">Show more</span>
                        <svg
                          class="caret w-3 h-3 transition-transform"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"
                          />
                        </svg>
                      </button>
                    )}
                  </div>
                </main>

                <footer class="flex flex-wrap gap-2">
                  <a
                    href={event.eventUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 bg-emerald-100 hover:bg-emerald-200 text-emerald-800 font-semibold py-2 px-3 rounded-lg text-xs transition-colors duration-200 border border-emerald-200"
                  >
                    RSVP on Meetup
                  </a>
                  <a
                    href={getGoogleCalendarLink(event)}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 bg-blue-100 hover:bg-blue-200 text-blue-800 font-semibold py-2 px-3 rounded-lg text-xs transition-colors duration-200 border border-blue-200"
                  >
                    üìÖ Add to Calendar
                  </a>
                </footer>
              </div>
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- Past Events -->
  {
    pastEvents.length > 0 && (
      <section>
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-2xl font-bold text-emerald-900">Past {label}</h2>
            {pastDateRange && (
              <p class="text-sm text-emerald-600 mt-1">
                {pastDateRange.latest.toLocaleDateString("en-US", {
                  month: "short",
                  day: "numeric",
                  year: "numeric",
                })}{" "}
                -{" "}
                {pastDateRange.earliest.toLocaleDateString("en-US", {
                  month: "short",
                  day: "numeric",
                  year: "numeric",
                })}
              </p>
            )}
          </div>
          <div class="text-sm text-emerald-600">
            Page {currentPage} of {totalPastPages} ‚Ä¢ {pastEvents.length} total
            events
          </div>
        </div>
        <div class="space-y-4">
          {paginatedPastEvents.map((event) => (
            <div
              class={`bg-white rounded-lg border ${colors.border} hover:shadow-md transition-shadow duration-200 opacity-75 relative overflow-hidden`}
            >
              {/* Date/Time Badge (Past Event - Gray) */}
              <div
                class={`absolute top-0 left-0 ${colors.badgePast} ${colors.badgeText} px-4 py-2.5 rounded-br-xl shadow-lg`}
              >
                <div class="text-sm font-bold leading-tight">
                  {formatCompactDate(event.dateTime)}
                </div>
                <div class="text-sm font-semibold mt-0.5">
                  {formatTime(event.dateTime)}
                </div>
              </div>

              <div class="pl-36 pr-4 py-4">
                <header class="mb-3">
                  <h3 class="text-lg font-semibold text-emerald-900 mb-2">
                    {event.title}
                  </h3>
                  <div class="flex flex-wrap gap-3 text-xs text-emerald-600">
                    <span>üìç {event.location.name}</span>
                    {event.going > 0 && <span>üë• {event.going} attended</span>}
                  </div>
                </header>

                <main class="mb-3">
                  <div
                    class="description-container text-emerald-800 text-sm"
                    data-full-description={event.description}
                  >
                    <div class="description-preview line-clamp-2">
                      <div set:html={getPreviewText(event.description)} />
                    </div>
                    <div class="description-full hidden">
                      <div
                        class="prose prose-emerald prose-sm max-w-none [&>p]:my-3 [&>ul]:my-3 [&>ol]:my-3 [&>li]:my-1"
                        set:html={renderMarkdown(event.description)}
                      />
                    </div>
                    {event.description.length > 120 && (
                      <button
                        class="show-more-btn text-emerald-600 hover:text-emerald-800 text-xs font-medium mt-1 flex items-center gap-1"
                        onclick="this.closest('.description-container').querySelector('.description-preview').classList.toggle('hidden'); this.closest('.description-container').querySelector('.description-full').classList.toggle('hidden'); this.querySelector('.caret').classList.toggle('rotate-180'); this.querySelector('.btn-text').textContent = this.querySelector('.btn-text').textContent === 'Show more' ? 'Show less' : 'Show more';"
                      >
                        <span class="btn-text">Show more</span>
                        <svg
                          class="caret w-3 h-3 transition-transform"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"
                          />
                        </svg>
                      </button>
                    )}
                  </div>
                </main>

                <footer class="flex flex-wrap items-center gap-2">
                  <a
                    href={event.eventUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2 px-3 rounded-lg text-xs transition-colors duration-200 border border-gray-200"
                  >
                    See event on Meetup
                  </a>
                  <span class="text-emerald-700 text-xs italic">
                    Thanks for coming!
                  </span>
                </footer>
              </div>
            </div>
          ))}
        </div>

        {/* Pagination Controls */}
        {totalPastPages > 1 && (
          <div class="mt-8 flex items-center justify-center gap-2">
            {currentPage > 1 && (
              <a
                href={getPageUrl(currentPage - 1)}
                class="px-4 py-2 text-sm font-medium text-emerald-700 bg-white border border-emerald-300 rounded-lg hover:bg-emerald-50 transition-colors"
              >
                ‚Üê Previous
              </a>
            )}

            <div class="flex gap-1">
              {/* First page */}
              <a
                href={getPageUrl(1)}
                class={`px-3 py-2 text-sm font-medium rounded-lg transition-colors ${
                  currentPage === 1
                    ? "bg-emerald-600 text-white"
                    : "text-emerald-700 bg-white border border-emerald-300 hover:bg-emerald-50"
                }`}
              >
                1
              </a>

              {/* Ellipsis after first page */}
              {currentPage > 3 && (
                <span class="px-2 text-emerald-600 flex items-center">...</span>
              )}

              {/* Previous page */}
              {currentPage > 2 && (
                <a
                  href={getPageUrl(currentPage - 1)}
                  class="px-3 py-2 text-sm font-medium rounded-lg transition-colors text-emerald-700 bg-white border border-emerald-300 hover:bg-emerald-50"
                >
                  {currentPage - 1}
                </a>
              )}

              {/* Current page (if not first or last) */}
              {currentPage > 1 && currentPage < totalPastPages && (
                <span class="px-3 py-2 text-sm font-medium rounded-lg bg-emerald-600 text-white">
                  {currentPage}
                </span>
              )}

              {/* Next page */}
              {currentPage < totalPastPages - 1 && (
                <a
                  href={getPageUrl(currentPage + 1)}
                  class="px-3 py-2 text-sm font-medium rounded-lg transition-colors text-emerald-700 bg-white border border-emerald-300 hover:bg-emerald-50"
                >
                  {currentPage + 1}
                </a>
              )}

              {/* Ellipsis before last page */}
              {currentPage < totalPastPages - 2 && (
                <span class="px-2 text-emerald-600 flex items-center">...</span>
              )}

              {/* Last page */}
              {totalPastPages > 1 && (
                <a
                  href={getPageUrl(totalPastPages)}
                  class={`px-3 py-2 text-sm font-medium rounded-lg transition-colors ${
                    currentPage === totalPastPages
                      ? "bg-emerald-600 text-white"
                      : "text-emerald-700 bg-white border border-emerald-300 hover:bg-emerald-50"
                  }`}
                >
                  {totalPastPages}
                </a>
              )}
            </div>

            {currentPage < totalPastPages && (
              <a
                href={getPageUrl(currentPage + 1)}
                class="px-4 py-2 text-sm font-medium text-emerald-700 bg-white border border-emerald-300 rounded-lg hover:bg-emerald-50 transition-colors"
              >
                Next ‚Üí
              </a>
            )}
          </div>
        )}
      </section>
    )
  }

  {
    events.length === 0 && (
      <section class="text-center py-12">
        <div class="bg-white rounded-lg border border-green-200 p-8">
          <p class="text-emerald-700 text-lg mb-2">
            {type === "hackathons"
              ? "Check back soon for upcoming hackathons!"
              : `No ${label.toLowerCase()} scheduled at this time.`}
          </p>
          <p class="text-emerald-600 text-sm">
            Join us on{" "}
            <a
              href="https://discord.gg/RNbuNQGP"
              class="text-emerald-600 hover:text-emerald-800 underline font-semibold"
              target="_blank"
              rel="noopener noreferrer"
            >
              Discord
            </a>{" "}
            for the latest updates.
          </p>
        </div>
      </section>
    )
  }
</MainLayout>
