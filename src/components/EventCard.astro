---
import {
  formatCompactDate,
  formatTime,
  getGoogleCalendarLink,
  renderMarkdown,
  getPreviewText,
} from "../utils/eventFormatting";
import { getEventTypeLabel } from "../utils/meetupApi";

interface Props {
  event: any;
  isPast?: boolean;
}

const { event, isPast = false } = Astro.props;
const date = new Date(event.dateTime);
const weekday = date.toLocaleDateString("en-US", {
  weekday: "short",
  timeZone: "America/New_York",
});
const month = date.toLocaleDateString("en-US", {
  month: "short",
  timeZone: "America/New_York",
});
const day = date.toLocaleDateString("en-US", {
  day: "numeric",
  timeZone: "America/New_York",
});

// Get colors based on event type - vibrant badges
const getEventColors = (eventType: string) => {
  switch (eventType) {
    case "mornings":
      return {
        badgeBg: "bg-orange-500",
        badgeText: "text-white",
        emoji: "‚òÄÔ∏è",
      };
    case "evenings":
      return {
        badgeBg: "bg-slate-700",
        badgeText: "text-white",
        emoji: "üåô",
      };
    case "hackathons":
      return {
        badgeBg: "bg-purple-600",
        badgeText: "text-white",
        emoji: "üöÄ",
      };
    default:
      return {
        badgeBg: "bg-emerald-600",
        badgeText: "text-white",
        emoji: "üí°",
      };
  }
};

const eventColors = getEventColors(event.eventType);
---

<div
  class={`bg-white rounded-xl border border-slate-200 hover:shadow-lg transition-all duration-200 ${isPast ? "opacity-60" : ""}`}
>
  <div class="p-6 sm:relative">
    {/* Mobile: Top row with badge and date side-by-side */}
    <div class="flex justify-between items-start gap-3 mb-4 sm:hidden">
      <div class="flex items-center gap-2">
        <span
          class={`${eventColors.badgeBg} ${eventColors.badgeText} text-sm font-semibold px-3 py-1.5 rounded-lg whitespace-nowrap w-[140px] text-center`}
        >
          {getEventTypeLabel(event.eventType).replace(/^[^\s]+\s/, "")}
        </span>
        <span class="text-2xl">{eventColors.emoji}</span>
      </div>
      <div class="flex flex-col text-right">
        <div
          class="text-sm font-bold text-slate-900 uppercase whitespace-nowrap"
        >
          {weekday}, {month}
          {day}
        </div>
        <div class="text-sm font-semibold text-slate-700">
          {formatTime(event.dateTime)}
        </div>
      </div>
    </div>

    {/* Desktop: Badge and date on right side */}
    <div
      class="hidden sm:flex sm:absolute sm:top-6 sm:right-6 flex-col items-end gap-2"
    >
      {/* Badge with emoji */}
      <div class="relative">
        <span class="absolute -left-9 top-1/2 -translate-y-1/2 text-2xl"
          >{eventColors.emoji}</span
        >
        <span
          class={`${eventColors.badgeBg} ${eventColors.badgeText} text-sm font-semibold px-3 py-1.5 rounded-lg whitespace-nowrap w-[155px] text-center inline-block`}
        >
          {getEventTypeLabel(event.eventType).replace(/^[^\s]+\s/, "")}
        </span>
      </div>

      {/* Date box underneath */}
      <div
        class="bg-slate-50 border border-slate-200 rounded-lg px-3 py-2 text-center w-[155px]"
      >
        <div class="text-sm font-bold text-slate-900 uppercase">
          {weekday}, {month}
          {day}
        </div>
        <div class="text-sm font-semibold text-slate-700 mt-0.5">
          {formatTime(event.dateTime)}
        </div>
      </div>
    </div>

    {/* Content */}
    <div class="sm:pr-40">
      <h3 class="text-xl font-bold text-slate-900 mb-3">
        {event.title}
      </h3>

      <div class="flex flex-wrap gap-3 text-sm text-slate-500 mb-4">
        <span class="flex items-center gap-1.5">
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          {event.location.name}
        </span>
        {
          event.going > 0 && (
            <span class="flex items-center gap-1.5">
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                />
              </svg>
              {event.going} {isPast ? "attended" : "going"}
            </span>
          )
        }
      </div>

      <div
        class="description-container text-slate-700 text-sm mb-4"
        data-full-description={event.description}
      >
        <div class="description-preview line-clamp-2">
          <div set:html={getPreviewText(event.description)} />
        </div>
        <div class="description-full hidden">
          <div
            class="prose prose-slate prose-sm max-w-none [&>p]:my-3 [&>ul]:my-3 [&>ol]:my-3 [&>li]:my-1.5"
            set:html={renderMarkdown(event.description)}
          />
        </div>
        {
          event.description.length > 120 && (
            <button
              class="show-more-btn text-emerald-600 hover:text-emerald-700 text-xs font-semibold mt-2 flex items-center gap-1"
              onclick="this.closest('.description-container').querySelector('.description-preview').classList.toggle('hidden'); this.closest('.description-container').querySelector('.description-full').classList.toggle('hidden'); this.querySelector('.caret').classList.toggle('rotate-180'); this.querySelector('.btn-text').textContent = this.querySelector('.btn-text').textContent === 'Show more' ? 'Show less' : 'Show more';"
            >
              <span class="btn-text">Show more</span>
              <svg
                class="caret w-3 h-3 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"
                />
              </svg>
            </button>
          )
        }
      </div>

      <div class="flex flex-wrap gap-2">
        {
          isPast ? (
            <a
              href={event.eventUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium py-2 px-4 rounded-lg text-sm transition-colors"
            >
              View event
            </a>
          ) : (
            <>
              <a
                href={event.eventUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2 px-4 rounded-lg text-sm transition-colors"
              >
                RSVP on Meetup
              </a>
              <a
                href={getGoogleCalendarLink(event)}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium py-2 px-4 rounded-lg text-sm transition-colors"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <rect
                    x="3"
                    y="4"
                    width="18"
                    height="18"
                    rx="2"
                    ry="2"
                    stroke-width="2"
                  />
                  <line x1="16" y1="2" x2="16" y2="6" stroke-width="2" />
                  <line x1="8" y1="2" x2="8" y2="6" stroke-width="2" />
                  <line x1="3" y1="10" x2="21" y2="10" stroke-width="2" />
                </svg>
                Add to Calendar
              </a>
            </>
          )
        }
      </div>
    </div>
  </div>
</div>
