---
import {camelCaseToWords} from '../../utils'

type Props = {
  dataItem: {[key: string]: string | number}
}
const {dataItem} = Astro.props

const valueProps = dataItem => Object.entries(dataItem)
---

<td class="flex flex-col flex-1">
  {
    valueProps(dataItem).map(valueItem => (
      <span>
        {camelCaseToWords(valueItem[0])}: {valueItem[1]}
      </span>
    ))
  }
</td>
