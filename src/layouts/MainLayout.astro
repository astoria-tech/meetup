---
import Layout from "./Layout.astro";
import { getLink } from "../components/Link.astro";
import ThemeToggle from "../components/ThemeToggle.astro";

type Props = {
  title?: string;
  bodyClass?: string[];
};
const { title, bodyClass = [] } = Astro.props;
---

<Layout
  title={title}
  bodyClass={["bg-gradient-to-br", "from-green-50", "to-emerald-50", "min-h-screen", ...bodyClass]}
>
  <!-- Subtle background pattern -->
  <div class="fixed inset-0 z-0 bg-waves"></div>
  <!-- Header with navigation -->
  <header class="bg-white/90 backdrop-blur-sm border-b border-green-200 sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-4 py-3">
      <nav>
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
          <!-- Logo section -->
          <div class="flex items-center justify-between">
            <a 
              href={getLink("/")} 
              class="flex items-center space-x-1 hover:opacity-80 transition-opacity duration-200"
            >
              <span class="text-xl sm:text-2xl font-bold text-emerald-700">
                Astoria Tech
              </span>
              <span class="text-xl sm:text-2xl font-light text-emerald-600">Meetup</span>
            </a>
          </div>
          
          <!-- Navigation section -->
          <div class="flex flex-wrap items-center gap-4 sm:gap-6 justify-start sm:justify-end pr-4">
            <a
              href={getLink("/")}
              class="text-emerald-700 hover:text-emerald-900 transition-colors duration-200 text-sm sm:text-base"
              >Home</a
            >
            <a
              href={getLink("/project-project")}
              class="text-emerald-700 hover:text-emerald-900 transition-colors duration-200 text-sm sm:text-base"
              >Project: Project</a
            >
            <a
              href={getLink("/links")}
              class="text-emerald-700 hover:text-emerald-900 transition-colors duration-200 text-sm sm:text-base"
              >Links</a
            >
            <a
              href={getLink("/donate")}
              class="text-emerald-700 hover:text-emerald-900 transition-colors duration-200 text-sm sm:text-base"
              >Donate</a
            >
            <a
              href="https://github.com/astoria-tech/meetup"
              class="text-emerald-600 hover:text-emerald-800 transition-colors duration-200 p-1"
              target="_blank"
              rel="noopener noreferrer"
              title="GitHub"
            >
              <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          </div>
        </div>
      </nav>
    </div>
  </header>

  <!-- Main content -->
  <main class="max-w-4xl mx-auto px-4 sm:px-6 py-4 sm:py-6 relative z-10">
    <slot />
  </main>
</Layout>
